<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <display-name>회사 내부 시스템</display-name>
    
    <!-- 세션 설정 -->
    <session-config>
        <session-timeout>360</session-timeout> <!-- 360분 (6시간) -->
    </session-config>
    
    <!-- 시작 페이지 설정 -->
    <welcome-file-list>
        <welcome-file>dashboard</welcome-file>
    </welcome-file-list>
    
    <!-- 에러 페이지 설정 -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <!-- 서블릿 매핑 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.company.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.company.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.company.controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CustomersServlet</servlet-name>
        <servlet-class>com.company.controller.CustomersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomersServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MaintenanceServlet</servlet-name>
        <servlet-class>com.company.controller.MaintenanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaintenanceServlet</servlet-name>
        <url-pattern>/maintenance</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MeetingServlet</servlet-name>
        <servlet-class>com.company.controller.MeetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeetingServlet</servlet-name>
        <url-pattern>/meeting</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TroubleshootingServlet</servlet-name>
        <servlet-class>com.company.controller.TroubleshootingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TroubleshootingServlet</servlet-name>
        <url-pattern>/troubleshooting</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>com.company.controller.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>

    <!-- UTF-8 인코딩 필터 (요청/응답 인코딩 일관화) -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.company.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 인증 필터: 세션 인증이 필요한 URL 보호 -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.company.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- JSTL 설정 및 JspServlet 직접 선언은 제거하여 중복/오용 방지 -->

</web-app>